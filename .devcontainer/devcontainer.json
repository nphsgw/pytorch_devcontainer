{
    "name": "pytorch",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--rm",
        "--shm-size",
        "1g",
        "--gpus",
        "all"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                // Python
                "ms-python.python",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "njpwerner.autodocstring",
                // Jupyter
                "ms-toolsai.jupyter",
                // Git
                "eamodio.gitlens",
                "donjayamanne.githistory",
                // etc
                "visualstudioexptteam.vscodeintellicode"
            ]
        }
    }
}